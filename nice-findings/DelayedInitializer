using UnityEngine;
using System.Collections;
//Можно добавить
// Число траев перед тем как выдать ошибку: инициализация не удалась
//Start is called on the frame when a script is enabled Like the Awake function, 
//Start is called exactly once in the lifetime of the script. However, Awake is called when the script object is initialised, 
//regardless of whether or not the script is enabled. 
//Start may not be called on the same frame as Awake if the script is not enabled at initialisation time.

Для тех целей для которых это создавалось лучше юзать OnJoinedRoom()

public class Initializer : MonoBehaviour {

	public bool isInitialized = false;
	public int targetVar = 0;
	// Use this for initialization
	void Start () 
	{
		StartCoroutine("DelayedInit");
		enabled = false;
	}

	// Update is called once per frame
	void Update () 
	{
		//Запуститься когда все null переменные будут инициализированны.
	}

	IEnumerator DelayedInit()
	{
		while ( targetVar == 0 )
		{
			yield return new WaitForSeconds(0.5f);
		}

		Debug.Log("Done");
		isInitialized = true;
		enabled = true;
	}
}
