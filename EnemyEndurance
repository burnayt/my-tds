using UnityEngine;
using System.Collections;

public class EnemyEndurance : MonoBehaviour, IHitable
{
	public int health = 10;
	public SimpleItemDropper dropper;
	
	public void Hit ( int damage )
	{
		health -= damage;
		if ( health<=0 )
		{
			Dead();
		}
	}

	private void Dead()
	{
		dropper.Drop(transform.position);
		Destroy(gameObject);
	}

}
